{
  "$schema": "https://openapi.vercel.sh/vercel.json",

  "version": 2,

  "buildCommand": "npm run build",
  "installCommand": "npm install",

  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3",
      "memory": 1024,
      "maxDuration": 30
    }
  },

  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index" },
    { "src": "/(.*)", "dest": "/api/index" }
  ],

  "env": {
    "NODE_ENV": "production"
  }
}
